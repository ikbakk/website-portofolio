---
import ButtonLink from "./ButtonLink.astro";

type Props = {
  code: string;
  demo: string;
};

const { code, demo } = Astro.props;
---

<div class="flex flex-col gap-4 lg:justify-self-end">
  <div class="flex gap-x-4 py-2">
    <ButtonLink href={code} title="Source Code" />
    <ButtonLink href={demo} title="Live App" />
  </div>
  <a rel="prefetch" class="group relative w-fit" href="/projects">
    <p class="cursor-pointer duration-200 hover:text-primary">Back</p>
    <div
      class="h-[1px] w-[0%] rounded-full bg-white delay-100 duration-200 group-hover:w-[100%] group-hover:bg-primary"
    >
    </div>
  </a>
</div>
