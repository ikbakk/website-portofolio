---
import { Picture } from "astro:assets";
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "../ui/card";

type Props = {
  title: string;
  techs: string[];
  image: string;
};

const { title, techs, image } = Astro.props;
---

<Card className="group w-full cursor-pointer">
  <CardHeader className="text-center ">
    <CardTitle
      className="line-clamp-2 text-lg text-white duration-200 group-hover:text-primary md:text-xl"
    >
      {title}
    </CardTitle>
    <CardDescription
      className="mx-auto flex w-fit items-center justify-center gap-2 rounded-md p-1 opacity-60 outline outline-1 duration-200 group-hover:opacity-100 group-hover:outline-primary"
    >
      {
        techs.map((tech) => (
          <Picture format="avif" src={tech} alt={tech} width={24} height={24} />
        ))
      }
    </CardDescription>
  </CardHeader>
  <CardContent className="h-[150px] w-full overflow-hidden pb-0 md:mt-2">
    <Picture
      quality="high"
      class="w-full translate-y-16 rounded-t-lg object-cover shadow-md shadow-background duration-300 group-hover:translate-y-8 md:translate-y-8 group-hover:md:translate-y-4"
      src={image}
      alt={title}
      width={1366}
      height={768}
      format="avif"
    />
  </CardContent>
</Card>
