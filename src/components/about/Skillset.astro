---
import { Image } from "astro:assets";
import { urlFor } from "@/lib/sanity";
import type { Tech } from "types";

type Props = {
  title: string;
  techs: Tech[];
};

const { techs, title } = Astro.props;
---

<div class="flex w-full flex-col items-center gap-2 md:flex-row md:gap-4">
  <p class="text-primary">{title}:</p>
  <div class="flex items-center gap-3 rounded-md bg-card px-4 py-2 shadow-md">
    {
      techs.map((tech) => (
        <Image
          src={urlFor(tech.logo).url()}
          width={24}
          height={24}
          quality="high"
          alt={tech.name}
        />
      ))
    }
  </div>
</div>
