---
import NavList from "./NavList.astro";
import Icon from 'astro-icon'
---

<footer
  class="flex w-full flex-col-reverse items-center gap-2 px-4 py-2 pb-20 lg:flex-row lg:justify-evenly lg:pb-12"
>
  <div
    class="flex w-full items-center justify-center pt-2 text-white/60 lg:basis-1/2"
  >
    <p>Powered by&nbsp;</p>
    <a
      href="https://astro.build"
      target="_blank"
      class="group flex items-center hover:text-primary hover:underline"
    >
      Astro
      <span class="pt-1">
        <Icon size={24} name='simple-icons:astro' />
      </span>
    </a>
  </div>
  <NavList />
</footer>
