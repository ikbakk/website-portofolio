---
type Props = {
  title: string;
  items: {
    name: string;
    href: string;
  }[];
};

const { title, items } = Astro.props;
---

<div class="flex flex-col items-center gap-2 p-2 lg:items-start">
  <h3 class="mb-1 capitalize text-primary">{title}</h3>
  {
    items.map((item) => (
      <a
        href={item.href}
        target="_blank"
        class="capitalize text-white/60 duration-200 hover:text-primary hover:underline"
      >
        {item.name}
      </a>
    ))
  }
</div>
